{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "helpers/*": ["src/helpers/*"],
      "constants/*": ["src/constants/*"],
      "config/*": ["src/config/*"],
      "models/*": ["src/database/models/*"],
      "resources/*": ["src/resources/*"],
      "v1/*": ["src/resources/api/v1/*"],
      "middlewares/*": ["src/middlewares/*"],
      "locales/*": ["src/locales/*"],
      "emails/*": ["src/emails/*"],
      "tests/*": ["src/tests/*"],
      "swagger/*": ["src/swagger/*"],
      "events/*": ["src/events/*"],
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
